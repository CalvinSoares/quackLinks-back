generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  FREE
  PREMIUM
}

enum AudioType {
  DIRECT
  SPOTIFY
  SOUNDCLOUD
}

enum BlockType {
  LINK
  HEADER
  TEXT
  DIVIDER
  VIDEO
  SOCIAL
  IMAGE
  AUDIO
  YOUTUBE_SUBSCRIBE
  PINTEREST
  COUNTDOWN
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  access_token      String? @db.Text
  refresh_token     String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model User {
  id               String    @id @default(uuid())
  email            String?   @unique
  name             String
  password         String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  role             UserRole  @default(FREE)
  premiumExpiresAt DateTime?

  stripeCustomerId String? @unique

  emailVerified DateTime?
  image         String?

  imageProvider String @default("LOCAL")

  discordImage String?
  googleImage  String?

  pages Page[]

  accounts          Account[]
  templatesCreated  Template[]             @relation("TemplatesCreated")
  favoriteTemplates UserFavoriteTemplate[]
  VerificationToken VerificationToken[]
  CustomDomain      CustomDomain?
}

model Block {
  id     String @id @default(uuid())
  pageId String
  page   Page   @relation(fields: [pageId], references: [id], onDelete: Cascade)

  type      BlockType
  order     Int       @default(0)
  isVisible Boolean   @default(true)

  content Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([pageId])
}

model Page {
  id                    String  @id @default(uuid())
  slug                  String  @unique
  title                 String?
  bio                   String?
  avatarUrl             String?
  showProfileCard       Boolean @default(true)
  profileCardColor      String?
  profileCardOpacity    Float   @default(0.2)
  useStandardIconColors Boolean @default(true)
  glowEffect            String  @default("none")
  showViewCount         Boolean @default(true)
  buttonStyle           String  @default("solid")

  buttonColor        String?
  buttonRoundness    String     @default("rounded-lg")
  buttonShadow       Boolean    @default(false)
  layoutType         String     @default("standard")
  pageLayout         String     @default("standard")
  linkStyle          String     @default("classic")
  layoutLinkStyle    String     @default("list")
  backgroundOverlay  String?
  backgroundBlur     Int        @default(0)
  customCss          String?    @db.Text
  backgroundType     String     @default("solid")
  titleEffect        String     @default("none")
  gradientDirection  String?
  gradientColorA     String?
  gradientColorB     String?
  backgroundUrl      String?
  backgroundVideoUrl String?
  backgroundColor    String?
  location           String?
  cursorUrl          String?
  shuffleAudios      Boolean    @default(false)
  showAudioPlayer    Boolean    @default(true)
  showEmbeds         Boolean    @default(true)
  showAudioButton    Boolean    @default(true)
  textColor          String?
  iconColor          String?
  profileRingType    String?    @default("none")
  profileRingColors  String[]   @default([])
  theme              String     @default("default")
  viewCount          Int        @default(0)
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
  userId             String
  user               User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  links              Link[]
  PageView           PageView[]
  audios             Audio[]
  blocks             Block[]
}

model Audio {
  id             String    @id @default(uuid())
  title          String
  url            String    @db.Text
  type           AudioType @default(DIRECT)
  spotifyTrackId String?
  coverUrl       String?   @db.Text
  duration       Int?
  order          Int       @default(0)
  isActive       Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  pageId         String
  page           Page      @relation(fields: [pageId], references: [id], onDelete: Cascade)
}

model Link {
  id          String      @id @default(uuid())
  title       String
  url         String
  order       Int         @default(0)
  clickCount  Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  isActive    Boolean     @default(true)
  scheduledAt DateTime?
  expiresAt   DateTime?
  pageId      String
  page        Page        @relation(fields: [pageId], references: [id], onDelete: Cascade)
  LinkClick   LinkClick[]
}

model VerificationToken {
  id      String   @id @default(uuid())
  token   String   @unique
  expires DateTime
  userId  String
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("verification_tokens")
}

model CustomDomain {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  domain    String   @unique
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
}

enum TemplateVisibility {
  PUBLIC
  PRIVATE
  UNLISTED
}

model Template {
  id              String                 @id @default(uuid())
  name            String
  previewImageUrl String
  visibility      TemplateVisibility     @default(PUBLIC)
  pageData        Json
  createdAt       DateTime               @default(now())
  updatedAt       DateTime               @updatedAt
  creatorId       String
  creator         User                   @relation("TemplatesCreated", fields: [creatorId], references: [id], onDelete: Cascade)
  favoritedBy     UserFavoriteTemplate[]
  tags            Tag[]
}

model Tag {
  id        String     @id @default(uuid())
  name      String     @unique
  templates Template[]
}

model UserFavoriteTemplate {
  userId     String
  templateId String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  template   Template @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@id([userId, templateId])
}

model PageView {
  id        String   @id @default(uuid())
  pageId    String
  page      Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  timestamp DateTime @default(now())
  country   String?
  referrer  String?
}

model LinkClick {
  id        String   @id @default(uuid())
  linkId    String
  link      Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)
  timestamp DateTime @default(now())
  country   String?
  referrer  String?
}
