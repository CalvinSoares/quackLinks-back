{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
 "include": [
    "src/**/*.ts", 
    "src/types/**/*.d.ts" 
  ],
  "exclude": [
    "node_modules"
  ]
}
